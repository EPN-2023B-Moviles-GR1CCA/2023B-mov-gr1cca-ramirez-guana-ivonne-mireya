        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.282" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtIn_nombreP_editar2"
        android:layout_width="333dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_Especie2"
        app:layout_constraintEnd_toEndOf="@+id/tv_NombrePlayl"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_NombrePlayl"
        app:layout_constraintTop_toBottomOf="@+id/tv_NombrePlayl"
