    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtIn_anioP_editar2"
        android:layout_width="333dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_Frecuencia2"
        app:layout_constraintEnd_toEndOf="@+id/tv_anioNacimientoP2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_anioNacimientoP2"
        app:layout_constraintTop_toBottomOf="@+id/tv_anioNacimientoP2"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtIn_autorP_editar2"
        android:layout_width="333dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_NivelAes2"
        app:layout_constraintEnd_toEndOf="@+id/tv_Frecuencia2"
        app:layout_constraintHorizontal_bias="0.0"
